<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <!--Use only Objects in `class`| Not: interface or abstract class-->
    <bean id="musicBean"
          class="ua.lviv.alishev.song.music.RockMusic"
          init-method="init"
          destroy-method="destroy">
          <!--factory-method="getMusic"-->
    </bean>

    <bean id="musicPlayer"
          class="ua.lviv.alishev.player.MusicPlayer"
          scope="prototype">
        <!--set dependency by constructor-->
        <!--        <constructor-arg ref="musicBean"/>-->

        <!--set dependency by `setter` value with attribute `value` or `ref` -->
        <!--setter name convention: set<Name of field>-->
        <property name="music" ref="musicBean"/>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

</beans>